<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesquisa de OpiniÃ£o"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnParticipar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Participar da Pesquisa" />

    <Button
        android:id="@+id/btnChecarVoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checar Meu Voto"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnFinalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar Pesquisa"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/txtVoteCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total de Votos: 0"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txtResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultados: "
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:gravity="center"/>

</LinearLayout>
